<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryContainer" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimary" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Checked state (for correct answers) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9" />
            <stroke
                android:width="2dp"
                android:color="#4CAF50" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorOutlineVariant" />
            <corners android:radius="8dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>
