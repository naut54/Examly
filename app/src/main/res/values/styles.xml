<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Examly.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Examly.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Examly.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Examly.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Examly.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Examly.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Examly.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Examly.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.Examly.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="CardStyle.Examly" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_large</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="strokeWidth">@dimen/stroke_width_thin</item>
        <item name="strokeColor">@color/outline_variant</item>
        <item name="contentPadding">@dimen/card_padding</item>
    </style>

    <style name="CardStyle.Examly.Flat" parent="CardStyle.Examly">
        <item name="cardElevation">@dimen/elevation_none</item>
        <item name="cardBackgroundColor">@color/surface_variant</item>
    </style>

    <style name="Button.Examly" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Button.Examly.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Button.Examly.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="InputField.Examly" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Examly.SmallComponent</item>
        <item name="boxStrokeWidth">@dimen/stroke_width_thin</item>
        <item name="boxStrokeWidthFocused">@dimen/stroke_width_normal</item>
    </style>

    <style name="InputField.Examly.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Examly.SmallComponent</item>
    </style>

    <style name="Divider.Examly" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Divider.Examly.Vertical" parent="Divider.Examly">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ListItem.Examly" parent="">
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ListItem.Examly.Small" parent="ListItem.Examly">
        <item name="android:minHeight">@dimen/list_item_height_small</item>
    </style>

    <style name="Toolbar.Examly" parent="Widget.Material3.Toolbar">
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="titleTextColor">@color/on_primary</item>
        <item name="subtitleTextColor">@color/on_primary</item>
        <item name="android:elevation">@dimen/elevation_medium</item>
    </style>

    <style name="Chip.Examly.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipMinHeight">@dimen/chip_height</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Chip.Examly.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">@dimen/chip_height_small</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Chip.Examly.Suggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipMinHeight">@dimen/chip_height_small</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="ProgressIndicator.Examly" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">@dimen/corner_radius_small</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
        <item name="android:minHeight">@dimen/progress_indicator_height</item>
    </style>

    <style name="ProgressIndicator.Examly.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
    </style>

    <style name="Dialog.Examly" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Examly.MediumComponent</item>
    </style>

    <style name="BottomSheet.Examly" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.Examly.LargeComponent</item>
    </style>

    <style name="FAB.Examly" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="elevation">@dimen/elevation_medium</item>
    </style>

    <style name="TabLayout.Examly" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
    </style>

    <style name="TestCard.Examly" parent="CardStyle.Examly">
        <item name="android:layout_margin">@dimen/test_card_margin</item>
    </style>

    <style name="QuestionCard.Examly" parent="CardStyle.Examly">
        <item name="contentPadding">@dimen/question_card_padding</item>
    </style>

    <style name="AnswerOption.Examly" parent="CardStyle.Examly.Flat">
        <item name="android:layout_marginTop">@dimen/answer_option_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/answer_option_margin_vertical</item>
        <item name="contentPadding">@dimen/answer_option_padding</item>
    </style>

    <style name="EmptyState.Examly" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_large</item>
    </style>

    <style name="EmptyState.Examly.Text" parent="EmptyState.Examly">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Loading.Examly" parent="">
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
